<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_light_yellow_bg"
    tools:context=".IntermediateList">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/family_button"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="494dp"
        android:background="@drawable/bg"
        android:text="Family"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="102dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="548dp"
        android:src="@drawable/intermediate_family" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/time_button"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="361dp"
        android:background="@drawable/bg"
        android:text="Time"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="410dp"
        android:src="@drawable/intermediate_time" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/travel_button"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="210dp"
        android:background="@drawable/bg"
        android:text="Travel"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="270dp"
        android:src="@drawable/intermediate_travel" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="658dp"
        android:text="Intermediate Level"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg"
        android:text="TAKE QUIZ"
        android:textColor="@color/white" />
</RelativeLayout>