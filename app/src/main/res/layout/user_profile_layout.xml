<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_light_yellow_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.0"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="1.0"
        android:orientation="horizontal"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_img"
        android:src="@drawable/ic_settings_icon"
        android:layout_marginTop="11dp"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:layout_constraintBottom_toTopOf="@id/my_profile_text"
        android:src="@drawable/profile_icon"
        android:id="@+id/user_profile_img"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/my_profile_text"
        android:text="My Profile"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/username_text"
        app:layout_constraintBottom_toTopOf="@id/level_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/username_text"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/user_profile_img"
        app:layout_constraintBottom_toTopOf="@id/level_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/level_text_show"
        android:text="Level"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/level_text"
        app:layout_constraintTop_toBottomOf="@id/username_text"
        app:layout_constraintBottom_toTopOf="@id/purpose_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/level_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/level_text_show"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/username_text"
        app:layout_constraintBottom_toTopOf="@id/purpose_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/purpose_text_show"
        android:text="Purpose(s) of learning"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/purpose_text"
        app:layout_constraintTop_toBottomOf="@id/level_text"
        app:layout_constraintBottom_toTopOf="@id/goal_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/purpose_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/purpose_text_show"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/level_text"
        app:layout_constraintBottom_toTopOf="@id/goal_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/goal_text_show"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Goal"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/goal_text"
        app:layout_constraintTop_toBottomOf="@id/purpose_text"
        app:layout_constraintBottom_toTopOf="@id/nationality_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/goal_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/goal_text_show"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/purpose_text"
        app:layout_constraintBottom_toTopOf="@id/nationality_text"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nationality_text_show"
        android:text="Nationality"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/start_guideline"
        app:layout_constraintEnd_toStartOf="@id/nationality_text"
        app:layout_constraintTop_toBottomOf="@id/user_profile_img"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nationality_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/nationality_text_show"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@id/user_profile_img"
        app:layout_constraintBottom_toTopOf="@id/bottom_guideline"/>

</androidx.constraintlayout.widget.ConstraintLayout>